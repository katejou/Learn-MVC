@if (Request.Browser.IsMobileDevice && Request.HttpMethod == "GET")
{
<div class="view-switcher ui-bar-a">
    @* 如果是 Mobile *@
    @if (ViewContext.HttpContext.GetOverriddenBrowser().IsMobileDevice)
    {
        @* 化為 DeskTop *@
        @*@: Displaying mobile view*@
        @Html.ActionLink("切到桌面版", "SwitchView", "ViewSwitcher", new { mobile = false, returnUrl = Request.Url.PathAndQuery }, 
        new { @class="ui-btn", rel = "external" })
    }
    @* 如果不是 Mobile = 桌面版 *@
    else
    {
        @* 化為 Mobile *@
        @*@: Displaying desktop view*@
        @Html.ActionLink("切到行動版", "SwitchView", "ViewSwitcher", new { mobile = true, returnUrl = Request.Url.PathAndQuery },
        new { rel = "external" })
    }
</div>
}