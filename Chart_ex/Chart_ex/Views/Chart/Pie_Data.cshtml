
@{
    ViewBag.Title = "Pie_Data";

    var Months1 = Json.Encode(ViewBag.Months1);
    var Months2 = Json.Encode(ViewBag.Months2);
    var temp1 = Json.Encode(ViewBag.temperature1);
    var temp2 = Json.Encode(ViewBag.temperature2);

}

<div class="row">
    <div class="col-md-6">
        <canvas id="pieChart"></canvas>
    </div>
    <div class="col-md-6">
        <canvas id="doughnutChart"></canvas>
    </div>
</div>

@section endJS{
    <script>
        var ctx = document.getElementById('pieChart');
        var chart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: @Html.Raw(Months1),
                datasets: [
                    {
                        data: @Html.Raw(temp1),
                        backgroundColor:
                            [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(255, 159, 64, 0.2)',
                                'rgba(255, 205, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(153, 102, 255, 0.2)'
                            ],
                        borderColor:
                            [
                                'rgb(255, 99, 132)',
                                'rgb(255, 159, 64)',
                                'rgb(255, 205, 86)',
                                'rgb(75, 192, 192)',
                                'rgb(54, 162, 235)',
                                'rgb(153, 102, 255)'
                            ],
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    fontSize: 26,
                    text: 'Pie範例'
                },
                legend: {
                    position: 'bottom',
                    labels: {
                        fontColor: 'black',
                    }
                }
            }
        });

        var ctx1 = document.getElementById('doughnutChart');
        var chart1 = new Chart(ctx1, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Months2),
                datasets: [
                    {
                        data: @Html.Raw(temp2),
                        backgroundColor:
                            [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(255, 159, 64, 0.2)',
                                'rgba(255, 205, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(153, 102, 255, 0.2)'
                            ],
                        borderColor:
                            [
                                'rgb(255, 99, 132)',
                                'rgb(255, 159, 64)',
                                'rgb(255, 205, 86)',
                                'rgb(75, 192, 192)',
                                'rgb(54, 162, 235)',
                                'rgb(153, 102, 255)'
                            ],
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    fontSize: 26,
                    text: 'Doughnut範例'
                },
                legend: {
                    position: 'bottom',
                    labels: {
                        fontColor: 'black',
                    }
                }
            }
        });
    </script>
}