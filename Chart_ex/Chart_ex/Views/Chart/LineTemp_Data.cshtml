@model IEnumerable<Chart_ex.Models.City>
@{
    ViewBag.Title = "LineTemp_Data";

    var jsonMonths = Json.Encode(ViewBag.MonthsLabel);
    var jsonCities = Json.Encode(Model);
}

<div class="container">
    <div class="jumbotron alert-success">
        <h2>由控制器傳入資料，於View格式為Json傳給圖片生成</h2>
    </div>
    <canvas id="lineChart"></canvas>
</div>

@section endJS{
    <script>
        var jsCities = @Html.Raw(jsonCities);
        var ctx = document.getElementById('lineChart');
        var chart = new Chart(ctx, {
            type: "line",
            data: {
                labels: @Html.Raw(jsonMonths),
                datasets: [
                    {
                        label: jsCities[0].Name,
                        data: jsCities[0].Temperature,
                        fill: false,
                        backgroundColor: 'rgba(255,165,0,0.3)',
                        borderColor: 'rgb(255,165,0)',
                        pointStyle: "circle",
                        pointBackgroundColor: 'rgb(0,255,0)',
                        pointRadius: 5,
                        pointHoverRadius: 10,
                    },
                    {
                        label: jsCities[1].Name,
                        data: jsCities[1].Temperature,
                        fill: false,
                        backgroundColor: 'rgba(255,165,0,0.3)',
                        borderColor: 'rgb(0,255,255)',
                        pointStyle: "triangle",
                        pointBackgroundColor: 'rgb(0,0,0)',
                        pointRadius: 5,
                        pointHoverRadius: 10,
                    },
                    {
                        label: jsCities[2].Name,
                        data: jsCities[2].Temperature,
                        fill: false,
                        backgroundColor: 'rgba(153,50,204,0.3)',
                        borderColor: 'rgb(153,50,204)',
                        pointStyle: "rect",
                        pointBackgroundColor: 'rgb(220,20,60)',
                        pointRadius: 5,
                        pointHoverRadius: 10,
                    }
                ]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    fontSize: 26,
                    text: 'Jan-Jun Average Temperature'
                },
                tooltips: {
                    mode: 'point',
                    intersect: true,
                },
                legend: {
                    position: 'bottom',
                    labels: {
                        fontColor: 'black',
                    }
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                            display: {
                                display: true,
                                labelString: '月份',
                                fontSize: 20
                            },
                            ticks: {
                                fontSize: 15
                            }
                        }
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: {
                                display: true,
                                labelString: '溫度',
                                fontSize: 20
                            },
                            ticks: {
                                fontSize: 15
                            }
                        }
                    }]
                },
                animation: {
                    duration: 3000
                }
            }
        });
    </script>





}