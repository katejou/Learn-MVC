
@{
    ViewBag.Title = "各月平均氣溫";
}

<h2>LineTemp</h2>

<canvas id="lineChart"></canvas>

@section endJS{

    <script>
        var ctx = document.getElementById('lineChart');
        var chart = new Chart(ctx, {
            type: "line",
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June'],
                datasets: [
                    {
                        label: "台北",
                        data: [16, 15, 18, 21, 25, 27],
                        fill: false,
                        backgroundColor: 'rgba(255,165,0,0.3)',
                        borderColor: 'rgb(255,165,0)',
                        pointStyle: "circle",
                        pointBackgroundColor: 'rgb(0,255,0)',
                        pointRadius: 5,
                        pointHoverRadius: 10,
                    },
                    {
                        label: "台中",
                        data: [18, 5, 30, 21, 10, 24],
                        fill: false,
                        backgroundColor: 'rgba(255,165,0,0.3)',
                        borderColor: 'rgb(0,255,255)',
                        pointStyle: "triangle",
                        pointBackgroundColor: 'rgb(0,0,0)',
                        pointRadius: 5,
                        pointHoverRadius: 10,
                    },
                    {
                        label: "台南",
                        data: [26, 10, 8, 15, 20, 7],
                        fill: false,
                        backgroundColor: 'rgba(153,50,204,0.3)',
                        borderColor: 'rgb(153,50,204)',
                        pointStyle: "rect",
                        pointBackgroundColor: 'rgb(220,20,60)',
                        pointRadius: 5,
                        pointHoverRadius: 10,
                    }
                ]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    fontSize: 26,
                    text: 'Jan-Jun Average Temperature'
                },
                tooltips: {
                    mode: 'point',
                    intersect: true,
                },
                legend: {
                    position: 'bottom',
                    labels: {
                        fontColor: 'black',
                    }
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                            display: {
                                display: true,
                                labelString: '月份',
                                fontSize: 20
                            },
                            ticks: {
                                fontSize: 15
                            }
                        }
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: {
                                display: true,
                                labelString: '溫度',
                                fontSize: 20
                            },
                            ticks: {
                                fontSize: 15
                            }
                        }
                    }]
                },
                animation: {
                    duration: 3000
                }
            }
        });
    </script>
}

