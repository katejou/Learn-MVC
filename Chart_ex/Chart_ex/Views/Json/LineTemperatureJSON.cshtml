@model IEnumerable<Chart_ex.Models.City>
@{
    ViewBag.Title = "LineTemperatureJSON";
}

<canvas id="lineChart"></canvas>

<table class="table table-striped table-bordered table-hover">

    <thead>
        <tr>
            <th>城市</th>
            <th>亂數</th>
        </tr>
    </thead>
    <tbody>

        @{ var js = new System.Web.Script.Serialization.JavaScriptSerializer(); }

        @foreach (var m in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => m.Name)</td>
                <td>@js.Serialize(m.Temperature)</td>
            </tr>
        }

    </tbody>
</table>

@section endJS{
    <script>

        var jsMonths =@Html.Raw(ViewBag.jsLabels);
        var jsArray = @Html.Raw(ViewBag.jsLocations);

        var ctx = document.getElementById('lineChart');

        var chart = new Chart(ctx, {
            type: "line",
            data: {
                labels: jsMonths,
                datasets: [
                    {
                        label: jsArray[0].Name,
                        data: jsArray[0].Temperature,
                        fill: false,
                        backgroundColor: 'rgba(255,165,0,0.3)',
                        borderColor: 'rgb(255,165,0)',
                        pointStyle: "circle",
                        pointBackgroundColor: 'rgb(0,255,0)',
                        pointRadius: 5,
                        pointHoverRadius: 10,
                    },
                    {
                        label: jsArray[1].Name,
                        data: jsArray[1].Temperature,
                        fill: false,
                        backgroundColor: 'rgba(255,165,0,0.3)',
                        borderColor: 'rgb(0,255,255)',
                        pointStyle: "triangle",
                        pointBackgroundColor: 'rgb(0,0,0)',
                        pointRadius: 5,
                        pointHoverRadius: 10,
                    },
                    {
                        label: jsArray[2].Name,
                        data: jsArray[2].Temperature,
                        fill: false,
                        backgroundColor: 'rgba(153,50,204,0.3)',
                        borderColor: 'rgb(153,50,204)',
                        pointStyle: "rect",
                        pointBackgroundColor: 'rgb(220,20,60)',
                        pointRadius: 5,
                        pointHoverRadius: 10,
                    }
                ]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    fontSize: 26,
                    text: ' 1月 - 4月 亂數'
                },
                tooltips: {
                    mode: 'point',
                    intersect: true,
                },
                legend: {
                    position: 'bottom',
                    labels: {
                        fontColor: 'black',
                    }
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                            display: {
                                display: true,
                                labelString: '月份',
                                fontSize: 20
                            },
                            ticks: {
                                fontSize: 15
                            }
                        }
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: {
                                display: true,
                                labelString: '溫度',
                                fontSize: 20
                            },
                            ticks: {
                                fontSize: 15
                            }
                        }
                    }]
                },
                animation: {
                    duration: 3000
                }
            }
        });

    </script>
}