@model IEnumerable<ChattingBoard.Models.Event>

@{
    ViewBag.Title = "查詢活動";
}

<h2>查詢活動</h2>


<table class="table">
    <tr>
        <th width="200px">
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th width="120px">
            @Html.DisplayNameFor(model => model.StartBy_Who)
        </th>
        <th width="300px">
            @Html.DisplayNameFor(model => model.Event_Name)
        </th>
        <th width="100px">
            @Html.DisplayNameFor(model => model.Event_Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartBy_Who)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event_Name)
            </td>
            <td>
                @if (item.Event_Status == false)
                {
                    <span style="color:purple">終止</span>
                }
                else
                {
                    <span style="color:limegreen">開放</span>
                }
            </td>
            <td>
                @Html.ActionLink("進入", "Event", new { id = item.Id })
            </td>
        </tr>
    }

</table>
